				<visible>
					!String.IsEmpty(Window(home).Property(context.venom.findSimilar)) +
					String.StartsWith(ListItem.path,plugin://plugin.video.venom/) +
					String.IsEqual(ListItem.Property(isVenom_widget),true) +
